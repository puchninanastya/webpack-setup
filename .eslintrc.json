{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "sonarjs"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "template-curly-spacing": ["error", "always"],

    "import/no-unresolved": "off",
    "import/extensions": [
      "error",
      "never"
    ],

    "react/jsx-curly-spacing": ["error", "always"]
  }
}
